{# templates/product/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}

    <!--Block main-->
    <section class="block-dashboard-main">
        <div class="container">
            <div class="row mb-4">
                <div class="col-7 d-flex flex-row justify-content-start align-items-center">
                    <h1>Productos <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-info">{{ products|length }}<span class="visually-hidden">0</span></span></h1>
                </div>
                <div class="col-5 d-flex flex-row justify-content-end align-items-center">
                    <a class="btn btn-success" href="{{ path('export_spreadsheet') }}" role="button"><i class="lni lni-download"></i></a>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Code</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Brand</th>
                                    <th scope="col">Price</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for value in products %}
                                    <tr>
                                        <th scope="row">{{ value.code }}</th>
                                        <td>{{ value.name }}</td>
                                        <td>{{ value.brand }}</td>
                                        <td>{{ value.price }}</td>
                                        <td>
                                            <a class="btn btn-primary" href="{{ path('edit_product', {id: value.id}) }}" role="button"><i class="lni lni-highlight-alt"></i></a>
                                            <a class="btn btn-primary" href="#" role="button"><i class="lni lni-close"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Fin Block main-->

{% endblock %}